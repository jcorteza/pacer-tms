<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center">New Employee Form</h2>
      <form class="signup">
        <div class="form-group">
          <label for="exampleInputUsername">Create A Username for New Employee:</label>
          <p id="instruction">First two letters fron FIRSTNAME and complete LASTNAME</p>
          <input type="text" class="form-control" id="email-input" placeholder="Username">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Create A Password for the new employee:</label>
          <input type="password" class="form-control" id="password-input" placeholder="Password">
        </div>
        <div class="form-group">
          <label for="employeeType">What type of employee are you adding:</label>
          <select class="form-control" id="dropdown-input" placeholder="EE Type">
            <option value:""></option>
            <option value="Manager">Manager</option>
            <option value="Clerk">Clerk</option>
            <option value="Forklift">Forklift</option>
          </select>
        </div>
        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span> <span class="msg"></span>
        </div>
        <hr>
        <button type="submit" class="btn btn-default">Sign Up</button>
      </form>
      <br />
      <p class="text-center">Already signed up? Log in <a href="/login">here</a></p>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/signup.js"></script>